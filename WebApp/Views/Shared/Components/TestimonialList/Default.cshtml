<div class="section px-3 px-lg-4 pt-5" id="testimonials">
    <div class="container-narrow">
        <div class="text-center mb-5">
            <h2 class="marker marker-center">Müşteri Görüşleri</h2>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 mb-5" data-aos-delay="100">
                    <div class="d-flex ms-md-3"><span><i class="fas fa-2x fa-quote-left"></i></span><span class="m-2">@item.Description</span></div>
                    <div class="d-flex justify-content-end align-items-end">
                        <div class="text-end me-2">
                            <div class="fw-bolder">@item.Name</div>
                            <div class="text-small">@item.Company</div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>