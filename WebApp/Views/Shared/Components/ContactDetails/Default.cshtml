@using Entities.Concrete
@model List<Contact>

@foreach (var item in Model)
{
    <div class="col-md-6" data-aos="fade-left" data-aos-delay="300">
        <div class="mt-3 px-1">
            <h5>@item.Title</h5>
            <p>@item.description</p>
        </div>
        <div class="mt-53 px-1">
            <div class="row">
                <div class="col-sm-2">
                    <div class="pb-1">Email:</div>
                </div>
                <div class="col-sm-10">
                    <div class="pb-1 fw-bolder">@item.Email</div>
                </div>
                <div class="col-sm-2">
                    <div class="pb-1">Phone:</div>
                </div>
                <div class="col-sm-10">
                    <div class="pb-1 fw-bolder">@item.Phone</div>
                </div>
            </div>
        </div>
    </div>
}
