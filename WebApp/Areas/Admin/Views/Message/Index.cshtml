

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 mx-auto grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Message List</h4>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Company</th>
                                    <th>Email</th>
                                    <th>Description</th>
                                    <th>Date Time</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    
                                    <tr>
                                        <td>@item.Name</td>
                                        <td>@item.Company</td>
                                        <td>@item.Email</td>
                                        <td>
                                            <a href="/Admin/Message/Details/@item.Id">
                                                @(item.Description.Length <= 20 ? item.Description : item.Description.Substring(0, 20) + "...")
                                            </a>
                                        </td>
                                        <td>@item.Created.ToShortDateString()</td>

                                        <td>@item.Status</td>
                                        <td>
                                            <a class="badge badge-success" href="/Admin/Message/Update/@item.Id">Update</a>
                                            <a class="badge badge-danger" href="/Admin/Message/Delete/@item.Id">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

