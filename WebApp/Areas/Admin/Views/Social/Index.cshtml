@{
    var message = ViewData["Message"] as string;
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 mx-auto grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Social Settings</h4>
                    <a href="/admin/Social/add" class="btn btn-outline-primary w-100 my-2">Add Social</a>

                    @if (!string.IsNullOrEmpty(message))
                    {
                        <div class="alert alert-success my-2">
                            @message
                        </div>
                    }

                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Url</th>
                                    <th>Icon</th>
                                    <th>Status</th>
                                    <th>Settings</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Name</td>
                                        <td>@item.Url</td>
                                        <td>@item.Icon</td>
                                        <td>@item.Status</td>
                                        <td>
                                            <a class="badge badge-success" href="/Admin/Social/Update/@item.Id">Update</a>
                                            <a class="badge badge-danger" href="/Admin/Social/Delete/@item.Id">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

