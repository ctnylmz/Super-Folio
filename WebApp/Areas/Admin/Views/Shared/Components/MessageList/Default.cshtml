<li class="nav-item dropdown">
    <a class="nav-link count-indicator dropdown-toggle" id="notificationDropdown" href="#" data-toggle="dropdown">
        <i class="fa-regular fa-message"></i>
    </a>
    <div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="notificationDropdown">
        <p class="mb-0 font-weight-normal float-left dropdown-header">Message</p>

        @foreach (var item in Model)
        {
            <a href="/Admin/Message/Details/@item.Id" class="dropdown-item preview-item">
                <div class="preview-thumbnail">
                    <div class="preview-icon bg-info">
                        <i class="ti-user mx-0"></i>
                    </div>
                </div>
                <div class="preview-item-content">
                    <h6 class="preview-subject font-weight-normal">@item.Name</h6>
                    <p class="font-weight-light small-text mb-0 text-muted">
                        @item.Created.ToShortDateString()
                    </p>
                </div>
            </a>
        }



        <hr />
        <a href="/Admin/Message" class="dropdown-item preview-item">
            Message All
        </a>

    </div>
</li>